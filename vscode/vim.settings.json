{
  "vim.leader": " ",
  "vim.useCtrlKeys": false,
  "vim.neovimConfigPath": "~/.config/nvim/init.lua",
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.neovimUseConfigFile": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.enableNeovim": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },
  "vim.highlightedyank.enable": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "after": ["<Esc>"],
      "before": ["j", "j"]
    },
    {
      "after": ["<Esc>"],
      "before": ["j", "k"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": ["g", "j"],
      "before": ["j"]
    },
    {
      "after": ["g", "k"],
      "before": ["k"]
    },
    {
      "after": ["1", "0", "j"],
      "before": ["J"]
    },
    {
      "after": ["1", "0", "k"],
      "before": ["K"]
    },
    {
      "after": ["^"],
      "before": ["H"]
    },
    {
      "after": ["g", "_"],
      "before": ["L"]
    },
    // normal 模式下 Y 复制整行到系统剪切板
    {
      "after": ["\"", "+", "y", "y"],
      "before": ["Y"]
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    // 行移动
    {
      "before": ["m", "j"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["m", "k"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    // 变量重命名
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    // 在当前文件查找
    {
      "before": ["<leader>", "f"],
      "commands": ["fuzzySearch.activeTextEditorWithCurrentSelection"]
    },
    // redo
    {
      "after": ["C-r"],
      "before": ["U"]
    },
    // 跳转到问题
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.next"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "after": ["g", "_"],
      "before": ["L"]
    },
    {
      "after": ["^"],
      "before": ["H"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    // visual 模式中 Y 复制当前已选内容到系统剪切板
    {
      "after": ["\"", "+", "y"],
      "before": ["Y"]
    },
    {
      "after": ["g", "j"],
      "before": ["j"]
    },
    {
      "after": ["g", "k"],
      "before": ["k"]
    },
    {
      "after": ["g", "_"],
      "before": ["L"]
    },
    {
      "after": ["^"],
      "before": ["H"]
    },
    // 在当前文件查找选中的文本
    {
      "before": ["<leader>", "f"],
      "commands": ["fuzzySearch.activeTextEditorWithCurrentSelection"]
    }
  ]
}
