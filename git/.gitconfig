    cp = cherry-pick
    cpx = cherry-pick -x
    br = branch
    cbr = "! git branch --show-current | tee /dev/tty | pbcopy"
    co = checkout
    sw = switch
    swc = switch -c
    push-for = "! git push origin HEAD:refs/for/$(git branch --show-current)"
    sh = "! git add . && git stash"
    sp = stash pop
    mr = merge
    mb = merge-base
    rb = rebase -i
    undo = reset --soft HEAD^
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ls = log --color --abbrev-commit --pretty=format:'[%C(red)%h%C(reset)] -%C(auto)%d%C(reset) %s %C(blue)(%cr) %C(bold magenta)<%an>%C(reset)'
    lt = ls-tree -r HEAD~ --name-only
    rss = reset --soft
    pro = pull -r origin
    pror = pull -r origin release-product
    ui = !lazygit
    last-commit = !echo "$(git log -1 --pretty=%B)"
    gh-clone = "! [ $# -ne 1 ] && echo 'Args: USERNAME/REPO_NAME' || git clone https://github.com/$1.git"
